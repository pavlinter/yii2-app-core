{
  "name": "kartik-v/yii2-app-core",
  "description": "Yii 2 Core Application Template (based on advanced)",
  "keywords": ["yii2", "framework", "core-app", "application", "template"],
  "type": "project",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Pavels Radajevs",
      "email": "pavlinter@gmail.com"
    }
  ],
  "support": {
    "issues": "https://github.com/pavlinter/yii2-app-core/issues",
    "source": "https://github.com/pavlinter/yii2-app-core"
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=5.4.0",
    "yiisoft/yii2": "*",
    "yiisoft/yii2-bootstrap": "*",
    "yiisoft/yii2-swiftmailer": "*",

    "pavlinter/yii2-adm": "@dev",
    "pavlinter/yii2-display-image": "1.*",
    "pavlinter/yii2-adm-pages": "@dev",
    "pavlinter/yii2-adm-params": "@dev",
    "pavlinter/yii2-adm-email-config": "@dev",
    "pavlinter/yii2-adm-mailing": "@dev"
  },
  "require-dev": {
    "yiisoft/yii2-codeception": "*",
    "yiisoft/yii2-debug": "*",
    "yiisoft/yii2-gii": "*",
    "yiisoft/yii2-faker": "*"
  },
  "config": {
    "process-timeout": 1800
  },
  "extra": {
    "yii\\composer\\Installer::postCreateProject": {
      "setPermission": [
        {
          "runtime": "0777",
          "web/assets": "0777",
          "yii": "0755"
        }
      ],
      "generateCookieValidationKey": [
        "config/web.php"
      ]
    },
    "asset-installer-paths": {
      "npm-asset-library": "vendor/npm",
      "bower-asset-library": "vendor/bower"
    }
  }
}
